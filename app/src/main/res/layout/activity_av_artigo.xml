<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.mobwell.academy.shopapp.screens.activities.AvArtigo">

    <TextView android:text="@string/shopapp_artigo_nome" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/shopapp_artigo_nome"
        android:hint="@string/shopapp_artigo_hint_nome"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:text="@string/shopapp_artigo_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/shopapp_artigo_descricao"
        android:hint="@string/shopapp_artigo_hint_descricao"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>
